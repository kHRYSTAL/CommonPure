<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="QMUI.Compat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/default_main_color</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>


    <!-- 选择列表项基本样式 -->
    <!-- 默认字体样式 -->

    <!-- 默认编辑框样式 -->
    <!-- 描述编辑框样式 -->
    <!-- 默认文字样式 -->
    <!-- 默认文字样式分割 -->
    <!-- 分割线-->
    <!-- 公共按钮样式 -->

    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否有边框 -->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--<item name="android:windowAnimationStyle">@null</item>-->
        <!--<item name="android:backgroundDimEnabled">false</item>-->
        <!--阴影  -->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <!--标题  -->
        <item name="android:windowNoTitle">true</item>
        <!-- 点外边可以消失  -->
        <item name="android:windowCloseOnTouchOutside">true</item>

        <!--是否在悬浮Activity之上  -->
        <!--<item name="android:windowIsFloating">true</item>-->
        <!-- 进入和退出的动画 -->
        <item name="android:windowAnimationStyle">@style/MyDialogAnimation</item>
    </style>

    <style name="MyDialogAnimation">
        <!--进入 -->
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <!--退出-->
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="MyTabLayoutAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_down_in</item>
        <item name="android:windowExitAnimation">@anim/slide_down_out</item>
    </style>

    <declare-styleable name="RecycleWheelView">
        <attr name="recycleWheelDirection" format="enum">
            <enum name="vertical" value="0"/>
            <enum name="horizontal" value="1"/>
        </attr>
        <attr name="recycleWheelLineColor" format="color"/>
        <attr name="recycleWheelLineThickness" format="dimension"/>
        <attr name="recycleWheelLineDrawable" format="reference"/>
        <attr name="recycleWheelLinePadding" format="dimension"/>
    </declare-styleable>

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@mipmap/dialog_load_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
