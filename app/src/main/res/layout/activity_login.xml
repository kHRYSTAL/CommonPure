<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_logo"/>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_30"
        android:paddingLeft="@dimen/dp_30"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号密码登录"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/dp_25"
            android:textColor="@color/color_0C0C0C"
            android:textSize="@dimen/text_size_16"/>


        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center_vertical">

            <com.yimeiduo.business.widget.ClearableEditText
                android:id="@+id/et_user"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="账号"
                android:inputType="number"
                android:text=""
                android:textSize="@dimen/text_size_15"
                android:textColorHint="@color/default_mark_color"
                android:textColor="@color/default_title_color" />

            <ImageView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_delete"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="11dp"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@color/color_EBEBEB"/>

        <LinearLayout
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="密码"
                android:text=""
                android:inputType="textPassword"
                android:textSize="@dimen/text_size_15"
                android:textColorHint="@color/default_mark_color"
                android:textColor="@color/default_title_color" />

            <ImageView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_delete"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="11dp"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@color/color_EBEBEB"/>

    </LinearLayout>

    <com.coorchice.library.SuperTextView
        android:id="@+id/tv_login"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:text="登录"
        android:gravity="center"

        android:textColor="@color/white"
        android:textSize="@dimen/text_size_15"
        android:layout_alignParentRight="true"

        android:padding="@dimen/dp_5"
        app:stv_solid="@color/color_3CBEA0"
        app:stv_corner="@dimen/dp_20" />

    <com.coorchice.library.SuperTextView
        android:id="@+id/tv_sanfang"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:text="第三方"
        android:gravity="center"

        android:textColor="@color/white"
        android:textSize="@dimen/text_size_15"
        android:layout_alignParentRight="true"

        android:padding="@dimen/dp_5"
        app:stv_solid="@color/color_3CBEA0"
        app:stv_corner="@dimen/dp_20" />

</LinearLayout>