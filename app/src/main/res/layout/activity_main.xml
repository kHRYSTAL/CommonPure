<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <com.yimeiduo.business.widget.NoScrollViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_F3F5F4"/>

    <com.chaychan.library.BottomBarLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/color_F3F5F4">

        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconNormal="@mipmap/ic_home"
            app:iconSelected="@mipmap/ic_home_select"
            app:itemText="@string/tab_home"
            app:itemTextSize="@dimen/text_size_10"
            app:textColorNormal="@color/color_999999"
            app:textColorSelected="@color/color_0C0C0C"
            app:openTouchBg="true"
            app:touchDrawable="@drawable/selector_bottom_tab"
            app:tabTextAppearance="@style/MyTabLayoutAppearance" />

        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconNormal="@mipmap/ic_business"
            app:iconSelected="@mipmap/ic_business_select"
            app:itemText="@string/tab_business"
            app:itemTextSize="@dimen/text_size_10"
            app:textColorNormal="@color/color_999999"
            app:textColorSelected="@color/color_0C0C0C"
            app:openTouchBg="true"
            app:touchDrawable="@drawable/selector_bottom_tab" />

        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconNormal="@mipmap/ic_my"
            app:iconSelected="@mipmap/ic_my_select"
            app:itemText="@string/tab_me"
            app:itemTextSize="@dimen/text_size_10"
            app:textColorNormal="@color/color_999999"
            app:textColorSelected="@color/color_0C0C0C"
            app:openTouchBg="true"
            app:touchDrawable="@drawable/selector_bottom_tab" />
    </com.chaychan.library.BottomBarLayout>

</LinearLayout>
